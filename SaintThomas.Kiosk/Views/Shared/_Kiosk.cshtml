<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Saint Thomas Kiosk</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Kiosk")
</head>
<body>

    <div id="wrap">
        <div id="header">
            <i id="logo"></i>
        </div>
        <div id="settings">
            <a href="#" onclick="DoFullScreen()"><i class="fa fa-tablet fa-2x"></i></a>
            <a href="@Url.Action("Index", "Image")">
                <i class="fa fa-cog fa-2x"></i>
            </a>
        </div>
        <div id="body">
            @RenderBody()
        </div>
        <div id="push"></div>
    </div>

    <div id="footer">
        Copyright &copy; @DateTime.Now.Year University of St. Thomas.
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ext")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kiosk")
    @RenderSection("scripts", required: false)
</body>
</html>